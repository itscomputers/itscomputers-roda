</ul>

<div class="dynamic-example">
  <h3>example</h3>

  <div class="question">
    <h4>question</h4>
    <form method="POST">
      Does
      <input
        id="divisor"
        name="divisor"
        value="<%= @example&.divisor %>"
        type="number"
        required="true"
        placeholder="divisor"
      />
      divide
      <input
        id="dividend"
        name="dividend"
        value="<%= @example&.dividend %>"
        type="number"
        required="true"
        placeholder="dividend"
      />
      ??
      <input type="submit" value="submit" />
    </form>
  </div>

  <% if @example %>
    <div class="answer">
      <h4>answer</h4>
      <p><strong><%= @example.answer %></strong>:
        <code>
          <%= @example.divisor %>
          <%= @example.boolean_answer ? "|" : "\u2224" %>
          <%= @example.dividend %>
        </code>
      </p>

      <ul>
        <% divisibility_statements(@example.divisor, @example.dividend).each do |statement| %>
          <li><%= statement %></li>
        <% end %>
      </ul>

      <p><strong>because</strong>: <%= @example.reason %></p>
    </div>
  <% end %>
</div>

